<odoo>

<!-- Vista LIST -->
<record id="view_agent_receipt_list" model="ir.ui.view">
    <field name="name">agent.receipt.list</field>
    <field name="model">agent.receipt</field>
    <field name="arch" type="xml">
        <list>
            <field name="name" string="N° Boleta"/>
            <field name="date"/>
            <field name="bank"/>
            <field name="movement"/>
            <field name="solicitante_nombre" string="Nombre solicitante"/>
            <field name="beneficiario_nombre" string="Nombre beneficiario"/>
            <field name="amount"/>
            <field name="fee"/>
            <field name="total"/>
            <field name="cancelled"/>

            <!-- Columna para ver/descargar la boleta PDF -->
            <button name="%(action_report_agent_receipt)d"
                    type="action"
                    string="Ver boleta"
                    class="btn-secondary"
                    icon="fa-print"/>
        </list>
    </field>
</record>


    <!-- Vista FORM -->
    <record id="view_agent_receipt_form" model="ir.ui.view">
        <field name="name">agent.receipt.form</field>
        <field name="model">agent.receipt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>

                    <group>
                        <group>
                            <field name="date"/>
                            <field name="bank"/>
                            <field name="movement"/>
                            <field name="operator_id"/>
                        </group>

                        <group>
                            <field name="account"/>
                            <field name="description"/>
                            <field name="cancelled"/>
                        </group>
                    </group>

                    <group string="Solicitante">
                        <field name="solicitante_dni"/>
                        <field name="solicitante_nombre"/>
                    </group>

                    <group string="Beneficiario">
                        <field name="beneficiario_dni"/>
                        <field name="beneficiario_nombre"/>
                    </group>

                    <group string="Montos">
                        <field name="amount"/>
                        <field name="fee"/>
                        <field name="total" readonly="1"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción que abre estas vistas -->
    <record id="action_agent_receipts" model="ir.actions.act_window">
        <field name="name">Boletas Registradas</field>
        <field name="res_model">agent.receipt</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
