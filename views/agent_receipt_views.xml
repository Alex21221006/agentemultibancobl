<odoo>

    <!-- Vista TREE -->
    <record id="view_agent_receipt_tree" model="ir.ui.view">
        <field name="name">agent.receipt.tree</field>
        <field name="model">agent.receipt</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="bank"/>
                <field name="movement"/>
                <field name="solicitante_nombre"/>
                <field name="beneficiario_nombre"/>
                <field name="amount"/>
                <field name="fee"/>
                <field name="total"/>
                <field name="cancelled"/>
            </tree>
        </field>
    </record>


    <!-- Vista FORM -->
    <record id="view_agent_receipt_form" model="ir.ui.view">
        <field name="name">agent.receipt.form</field>
        <field name="model">agent.receipt</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>

                    <group>
                        <group>
                            <field name="date"/>
                            <field name="bank"/>
                            <field name="movement"/>
                            <field name="operator_id"/>
                        </group>

                        <group>
                            <field name="account"/>
                            <field name="description"/>
                            <field name="cancelled"/>
                        </group>
                    </group>

                    <group string="Solicitante">
                        <field name="solicitante_dni"/>
                        <field name="solicitante_nombre"/>
                    </group>

                    <group string="Beneficiario">
                        <field name="beneficiario_dni"/>
                        <field name="beneficiario_nombre"/>
                    </group>

                    <group string="Montos">
                        <field name="amount"/>
                        <field name="fee"/>
                        <field name="total" readonly="1"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n que abre estas vistas -->
    <record id="action_agent_receipts" model="ir.actions.act_window">
        <field name="name">Boletas Registradas</field>
        <field name="res_model">agent.receipt</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
